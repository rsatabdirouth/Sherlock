            websiteName.value = "";
            var homePhone = document.getElementById("homePhone");
            homePhone.value = "";
            var workPhone = document.getElementById("workPhone");
            workPhone.value = "";
            var fullName = document.getElementById("fullName");
            fullName.value = "";
            var trnsfrStart = document.getElementById("trnsfrStart");
            trnsfrStart.value = "";
